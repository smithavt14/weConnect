.profile_wrapper {
  background: #F3F8FD;
  display: flex;
  flex-direction: column;
  width: 100vw;
  min-height: 100vh;
}

.profile_header {
  color: #046E8F;
  font-size: 20px;
  margin: 10px 0 5px 10px;
}

.profile_header-underline {
  height: 3px;
  width: 150px;
  background: #046E8F;
  margin-left: 10px;
}

/* Has Profile Styles */

.profile_container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.profile_img {
  height: 150px;
  width: 150px;
  border-radius: 50%;
  background: gray;
  background-position: left;
  background-size: cover;
  margin: 20px 0;
}

.profile_info-container {
  width: 80%;
  padding: 15px;
  background: white;
  border-radius: 5px;
  box-shadow: 0px 0px 5px rgba(2, 123, 206, 0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #046E8F;
  margin-bottom: 5px;
}

.profile_user-name {
  font-size: 30px;
  font-weight: 500;
  margin-bottom: 10px;
}

.profile_user-position {
  font-size: 18px;
}

.profile_info-header {
  width: 100%;
  text-align: left;
  font-size: 18px;
  font-weight: 500;
  margin-bottom: 5px;
}

.profile_info-content {
  font-size: 16px;
  font-weight: 300;
  width: 100%;
  text-align: left;
}

.profile_contact-container {
  display: flex;
  width: 100%;
}

.profile_contact-box {
  flex-grow: 1;
  flex-shrink: 0;
  text-align: center;
  margin-top: 10px;
}

.profile_contact-icon {
  height: 40px;
  width: 40px;
}

.profile_contact-info {
  font-size: 12px;
}

/* No Profile Styles */
.profile_np-container {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.profile_np-title {
  color: #046E8F;
  margin: 20px;
  font-weight: 100;
}

.profile_np-btn {
  height: 40px;
  width: 140px;
  background: #027BCE;
  color: white;
  font-weight: 100;
  border-radius: 5px;
  margin: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
}
