.profile {
  background: #F6F6F6;
  display: flex;
  flex-direction: column;
  width: 100vw;
  min-height: 100vh;
  color: #252525;
}

.profile .header {
  font-size: 20px;
  margin: 10px 0 5px 5%;
}

.profile .header-underline {
  height: 3px;
  width: 150px;
  background: #252525;
  margin-left: 5%;
}

/* Has Profile Styles */

.profile .profile-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: scroll;
  box-sizing: border-box;
}

.profile .img {
  height: 150px;
  width: 90%;
  border-radius: 2px;
  background: gray;
  background-position: left;
  background-size: cover;
  margin: 20px 0;
}

.profile .info-container {
  width: 90%;
  padding: 15px;
  background: white;
  border-radius: 5px;
  box-shadow: 0px 0px 5px rgba(37, 37, 37, 0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 5px;
  box-sizing: border-box;
}

.profile .user-name {
  font-size: 30px;
  font-weight: 500;
  margin-bottom: 10px;
}

.profile .user-position {
  font-size: 18px;
}

.profile .info-header {
  width: 100%;
  text-align: left;
  font-size: 18px;
  font-weight: 500;
  margin-bottom: 5px;
}

.profile .info-content {
  font-size: 16px;
  font-weight: 300;
  width: 100%;
  text-align: left;
}

.profile .contact-container {
  display: flex;
  width: 100%;
}

.profile .contact-box {
  flex-grow: 1;
  flex-shrink: 0;
  text-align: center;
  margin-top: 10px;
}

.profile .contact-icon {
  height: 40px;
  width: 40px;
}

.profile .contact-info {
  font-size: 12px;
}

/* No Profile Styles */
.profile .np-container {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.profile .np-title {
  margin: 20px;
  font-weight: 100;
}

.profile .np-btn {
  height: 40px;
  width: 140px;
  background: #027BCE;
  color: white;
  font-weight: 100;
  border-radius: 5px;
  margin: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
}
