.profile_wrapper {
  background-size: contain;
  background-repeat: repeat-y;
  width: 100vw;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.profile_user-img {
  height: 150px;
  width: 150px;
  border-radius: 50%;
  margin: 20px 0;
  background-size: cover;
  background-position: center;
}

.profile_info-container {
  margin-bottom: 20px;
  width: 90%;
  background: white;
  box-shadow: 1px 1px 5px rgba(0,0,0, 0.25);
  border-radius: 2px;
}

.profile_edit-btn {
  width: 90vw;
  font-family: arial;
  box-shadow: 1px 1px 5px rgba(0,0,0, 0.25);
  border-radius: 2px;
  margin-bottom: 20px;
}