.profile_wrapper {
  background: #F0F3F4;
  background-size: cover;
  background-position: bottom;
  height: 100vh;
  width: 100vw;
  overflow: hidden;
  position: relative;
}

.profile_background-img {
  height: 25%;
  width: 100%;
  position: relative;
  background: black;
}

.profile_user-img {
  height: 150px;
  width: 150px;
  border-radius: 50%;
  overflow: hidden;
  background: white;
  background-size: cover;
  background-position: center;
  position: absolute;
  bottom: -50px;
  left: 50%;
  transform: translateX(-50%);

}

.profile_info-container {
  margin: 10px 0;
  height: 25%;
  width: 100%;
  background: gray;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.profile_user-name {
  margin-top: 60px;
  font-size: 30px;
  font-weight: bold;
}

.profile_user-title {
  font-weight: 20px;
}

.profile_edit-btn {
  width: 80%;
  position: absolute;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
}