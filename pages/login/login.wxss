.login_wrapper {
  background: radial-gradient(1029.66px at 12.4% 8.99%, rgba(0, 83, 119, 0.72) 0%, rgba(255, 255, 255, 0.37) 100%), #027BCE;
  background-size: cover;
  background-position: bottom;
  height: 100vh;
  width: 100vw;
  overflow: hidden;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.login_img {
  height: 200px;
  width: 200px;
  flex-shrink: 0;
}

.login_title {
  color: white;
  font-family: Helvetica;
  font-weight: 200;
  font-size: 40px;
  margin: 20px 0;
}

#login_title-bold {
  font-weight: 800;
}

.login_subtitle {
  color: white;
  font-style: italic;
  text-align: center;
  font-weight: 200;
  font-size: 16px;
  width: 80%;
}

.login_btn {
  width: 80%;
  background: white;
  color: blue;
  position: absolute;
  bottom: 10%;
  left: 50%;
  transform: translateX(-50%);
}